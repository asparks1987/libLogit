{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://liblogit.dev/schema/logit.schema.json",
  "title": "libLogit Configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "level": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error",
            "fatal"
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "threshold"
          ],
          "properties": {
            "threshold": {
              "type": "string",
              "enum": [
                "trace",
                "debug",
                "info",
                "warn",
                "error",
                "fatal"
              ]
            },
            "tag": {
              "type": "boolean",
              "default": true
            }
          }
        }
      ]
    },
    "timestamp": {
      "type": "boolean",
      "default": true
    },
    "file_location": {
      "type": [
        "string",
        "null"
      ]
    },
    "network_file_location": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "level"
  ],
  "unevaluatedProperties": false
}
